<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.lopatka.idonc.web.model.user" default-access="field">
	<class name="UserCredential" table="USER_CREDENTIALS">
		<cache usage="read-write" />
		<id name="id" column="ID">
			<generator class="native" />
		</id>

		<many-to-one name="user" class="IdoncUser" column="USER" lazy="false" not-null="true" />
		<property name="password" type="string" length="32" column="PASSWORD" not-null="true" />
		<property name="salt" type="string" length="32" column="SALT" not-null="true"/>
	</class>
</hibernate-mapping>