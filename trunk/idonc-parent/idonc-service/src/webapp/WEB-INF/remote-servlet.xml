<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
	<bean name="/ConverterService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service">
            <ref bean="converterService"/>
        </property>
        <property name="serviceInterface">
            <value>org.lopatka.idonc.service.ConverterService</value>
        </property>
    </bean>

    <bean name="/IdoncService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service">
            <ref bean="idoncService"/>
        </property>
        <property name="serviceInterface">
            <value>org.lopatka.idonc.service.IdoncService</value>
        </property>
    </bean>
    
</beans>

