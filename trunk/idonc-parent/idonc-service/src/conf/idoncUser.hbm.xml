<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" package="org.lopatka.idonc.web.model.user">
  <class name="IdoncUser" table="USERS">
    <cache usage="read-write"/>
    <id column="ID" name="id">
      <generator class="native"/>
    </id>
    <property column="USER_NAME" length="255" name="userName" not-null="true" type="string"/>
    <!--		<property name="password" type="string" length="255" column="PASSWORD" not-null="true"/>-->
    <property column="FIRST_NAME" length="255" name="firstName" type="string"/>
    <property column="LAST_NAME" length="255" name="lastName" type="string"/>
    <component class="org.lopatka.idonc.web.model.user.Address" name="address">
      <property column="EMAIL" length="255" name="email" not-null="true" type="string"/>
      <property column="WEBSITE" length="255" name="website" type="string"/>
      <property column="STREET" length="255" name="street" type="string"/>
      <property column="HOUSE_NUMBER" length="255" name="houseNumber" type="string"/>
      <property column="CITY" length="255" name="city" type="string"/>
      <property column="ZIP_CODE" length="255" name="zipCode" type="string"/>
      <property column="COUNTRY" length="255" name="country" type="string"/>
    </component>
  </class>
</hibernate-mapping>
