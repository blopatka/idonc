<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
	<class name="org.lopatka.idonc.web.model.user.LoggedUser" table="LOGGED_USER">
		<id name="id" column="ID">
			<generator class="increment"/>
		</id>
		
		<many-to-one name="user" class="org.lopatka.idonc.web.model.user.IdoncUser" column="USER_ID" lazy="false" not-null="true"/>
		<property name="sessionId" column="SESSION_ID" type="string" not-null="true"/>
	</class>
</hibernate-mapping>
