<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
	<class name="org.lopatka.idonc.web.model.user.IdoncUser" table="USERS">
		<id name="id" column="ID">
			<generator class="increment"/>
		</id>
		
		<property name="userName" type="string" length="255" column="USER_NAME" not-null="true"/>
		<property name="password" type="string" length="255" column="PASSWORD" not-null="true"/>
		<property name="firstName" type="string" length="255" column="FIRST_NAME"/>
		<property name="lastName" type="string" length="255" column="LAST_NAME"/>
		
		<component name="address" class="org.lopatka.idonc.web.model.user.Address" >
			<property name="email" type="string" length="255" column="EMAIL" not-null="true"/>
			<property name="website" type="string" length="255" column="WEBSITE"/>
			<property name="street" type="string" length="255" column="STREET"/>
			<property name="houseNumber" type="string" length="255" column="HOUSE_NUMBER"/>
			<property name="city" type="string" length="255" column="CITY"/>
			<property name="zipCode" type="string" length="255" column="ZIP_CODE"/>
			<property name="country" type="string" length="255" column="COUNTRY"/>
		</component>
	</class>
</hibernate-mapping>
